<header>
    <div class="header-left">
        <img src="/images/site/byui_class_scheduler_logo.png" alt="BYU-I Class Scheduler Logo" class="landing-logo">
        <h1>Class Scheduler</h1>
    </div>
    <div class="header-right">
        <% if (locals.loggedin) { %>
            <p class="user-email"><%= locals.accountData?.email %></p>
            <div class="loggedInNavLinks">
                <a href="/dashboard" class="nav-link">Dashboard</a>
                <a href="/logout" class="nav-link logout-link" onclick="handleLogout()">Logout</a>
            </div>
        <% } else { %>
            <div class="navLinks">
                <a href="/login" class="nav-link">Sign In</a>
            </div>
        <% } %>
    </div>
</header>

<script>
    function handleLogout() {
        // Clear JWT token from localStorage
        localStorage.removeItem('token');
        // Let the browser navigate to /logout naturally
    }
</script>